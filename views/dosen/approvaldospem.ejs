<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Sistem Approval Dosen Pembimbing</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <%- include('../partial/header.ejs') %>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Sidebar -->
        <%- include('../sidebar/sidebardosen.ejs') %>

            <!-- Main Content Area -->
            <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold text-green-600 mb-6">Sistem Approval Dosen Pembimbing</h2>
                <div class="overflow-x-auto bg-white rounded-lg shadow-lg">
                    <table class="min-w-full table-auto w-full border border-gray-400 border-collapse text-sm">
                    <thead>
                        <tr class="bg-green-600 text-white">
                        <th class="px-4 py-2 border border-gray-400 text-center">No</th>
                        <th class="px-4 py-2 border border-gray-400 text-center">Nama</th>
                        <th class="px-4 py-2 border border-gray-400 text-center">Topik TA</th>
                        <th class="px-4 py-2 border border-gray-400 text-center">Judul TA</th>
                        <th class="px-4 py-2 border border-gray-400 text-center">Tanggal Pengajuan</th>
                        <th class="px-4 py-2 border border-gray-400 text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% mahasiswaList.forEach((mahasiswa, index) => { %>
                        <tr class="bg-white hover:bg-gray-100">
                        <td class="px-4 py-2 border border-gray-400 text-center"><%= index + 1 %></td>
                        <td class="px-4 py-2 border border-gray-400"><%= mahasiswa.user.nama %></td>
                        <td class="px-4 py-2 border border-gray-400"><%= mahasiswa.topikta.topik %></td>
                        <td class="px-4 py-2 border border-gray-400 text-center"><%= mahasiswa.judul_ta %></td>
                        <td class="px-4 py-2 border border-gray-400 text-center"><%= mahasiswa.tanggal_daftar %></td>
                        <td class="px-4 py-2 border border-gray-400 text-center">
                            <div class="flex justify-center space-x-2">
                            <button class="bg-green-600 text-white py-1 px-3 rounded hover:bg-green-700 approvalBtn"
                                data-id="<%= mahasiswa.id_pendaftaran %>" data-status="Disetujui">
                                Setuju
                            </button>
                            <button class="bg-red-600 text-white py-1 px-3 rounded hover:bg-red-700 approvalBtn"
                                data-id="<%= mahasiswa.id_pendaftaran %>" data-status="Ditolak">
                                Tidak Setuju
                            </button>
                            </div>
                        </td>
                        </tr>
                        <% }) %>
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>
    <!-- Check if the success parameter is passed in the URL -->
    <script src="/javascripts/alert-approval.js"></script>
  </body>
</html>
