<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Revisi Laporan TA Mahasiswa</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-green-600 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold">SIMTASI</h1>
        </div>
        <div>
          <button
            class="text-white bg-green-700 px-4 py-2 rounded-full hover:bg-green-800"
          >
            <span
              style="
                background-image: url('../images/user_icon.png');
                background-size: cover;
                background-position: center;
                width: 24px;
                height: 24px;
                display: inline-block;
              "
            ></span>
          </button>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Sidebar -->
        <%- include('../sidebar/sidebardosen.ejs') %>

        <!-- Main Content Area -->
<div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold text-green-600 mb-6">
        Revisi Laporan TA Mahasiswa
    </h2>

    <!-- Tabel untuk Menampilkan Data Upload -->
    <div class="mt-6">
        <h3 class="text-2xl font-semibold text-green-600 mb-4">Daftar Revisi Laporan TA Mahasiswa</h3>
        <table class="min-w-full table-auto border-collapse bg-white shadow-lg">
            <thead class="bg-green-500 text-white">
                <tr>
                    <th class="py-3 px-6 text-left">Nama Mahasiswa</th>
                    <th class="py-3 px-6 text-left">File Laporan TA</th>
                    <th class="py-3 px-6 text-left">Status Revisi</th>
                    <th class="py-3 px-6 text-left">Berikan Feedback</th>
                </tr>
            </thead>
            <tbody id="fileTableBody">
                <!-- Data Dummy Table -->
                <tr class="cursor-pointer" onclick="selectLaporanTA('John Doe', 'Laporan TA Teknologi AI', 'Belum Review')">
                    <td class="py-3 px-6">John Doe</td>
                    <td class="py-3 px-6">Laporan Teknologi AI</td>
                    <td class="py-3 px-6">Belum Review</td>
                    <td class="py-3 px-6 text-blue-500">
                        <!-- Button for giving feedback -->
                    <button onclick="selectLapranTA('John Doe', 'Laporan TA Teknologi AI', 'Belum Review')" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">
                        Berikan Feedback
                    </button></td>
                </tr>
                <tr class="cursor-pointer" onclick="selectLaporanTA('Jane Smith', 'Laporan TA Sistem Informasi', 'Tunggu Review')">
                    <td class="py-3 px-6">Jane Smith</td>
                    <td class="py-3 px-6">Laporan Sistem Informasi</td>
                    <td class="py-3 px-6">Tunggu Review</td>
                    <td class="py-3 px-6 text-blue-500"><!-- Button for giving feedback -->
                    <button onclick="selectLaporanTA('John Doe', 'Laporan TA Teknologi AI', 'Belum Review')" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">
                        Berikan Feedback
                    </button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Form Feedback yang muncul setelah memilih data -->
    <div id="feedbackForm" class="mt-6 hidden">
        <h3 class="text-2xl font-semibold text-green-600 mb-4">Feedback untuk: <span id="selectedLaporanTAName">Nama Laporan TA</span></h3>
        <form action="#" method="POST">
            <!-- Input Nama Mahasiswa -->
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-700">Nama Mahasiswa</label>
                <input type="text" id="name" name="name" placeholder="Masukkan Nama Mahasiswa" class="mt-1 block w-full px-4 py-2 border border-green-500 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 bg-green-100" required>
            </div>

            <!-- Input Laporan TA -->
            <div class="mb-4">
                <label for="laporanTA" class="block text-sm font-medium text-gray-700">Laporan TA</label>
                <input type="text" id="LaporanTA" name="LaporanTA" placeholder="Masukkan Laporan TA" class="mt-1 block w-full px-4 py-2 border border-green-500 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 bg-green-100" required>
            </div>

            <!-- Textarea Feedback -->
            <div class="mb-4">
                <label for="feedback" class="block text-sm font-medium text-gray-700">Feedback</label>
                <textarea id="feedback" name="feedback" placeholder="Masukkan Feedback" class="mt-1 block w-full px-4 py-2 border border-green-500 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 bg-green-100" required></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full px-4 py-2 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                Submit
            </button>
        </form>
    </div>
</div>

      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>

    <script>
    // Fungsi untuk menangani pemilihan laporan TA
    function selectLaporanTA(studentName, laporanTATitle, reviewStatus) {
        // Tampilkan Form Feedback dan update nama proposal yang dipilih
        document.getElementById("feedbackForm").classList.remove("hidden");
        document.getElementById("selectedLaporanTAName").textContent = laporanTATitle;
        
        // Mengisi form dengan data yang sesuai
        document.getElementById("name").value = studentName;
        document.getElementById("LaporanTA").value = laporanTATitle;
    }
</script>
  </body>
</html>
