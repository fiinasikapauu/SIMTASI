  <div class="max-w-4xl mx-auto px-4 py-10">
    <!-- Form Upload File -->
    <form action="/upload" method="POST" enctype="multipart/form-data">
    <label for="proposalFile" class="block text-lg font-medium text-green-600 mb-4">Pilih File Proposal (PDF/DOC)</label>
      <!-- Box untuk upload -->
      <div class="border-2 border-green-500 p-6 rounded-lg text-left bg-green-100">
        
        <!-- Flex container untuk tombol dan status -->
        <div class="flex items-center justify-">
          <!-- Tombol Choose File -->
          <label for="proposalFile" class="bg-green-500 text-white px-6 py-3 rounded-lg cursor-pointer hover:bg-green-700 transition">
            Choose File
          </label>
          <input type="file" id="proposalFile" name="proposalFile" accept=".pdf,.doc,.docx" class="hidden" required>

          <!-- Status nama file -->
          <p id="fileName" class="mt-4 text-sm text-gray-600 ml-4">No file chosen</p>
        </div>
      </div>


      <!-- Tombol Upload -->
      <div class="flex justify-center mt-6">
        <button type="submit" class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition w-full md:w-auto">
          Upload
        </button>
      </div>
    </form>
