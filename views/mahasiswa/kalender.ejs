<!DOCTYPE html>
<html lang="id">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Kalender</title>
      <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body class="bg-gray-100 font-sans">

    <!-- Header -->
    <%- include('../partial/header.ejs') %>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        
        <!-- Sidebar -->
        <%- include('../sidebar/sidebarmahasiswa.ejs') %>

        <!-- Kalender Container -->
        <div class="col-span-3 bg-white p-6 rounded-lg shadow-lg">
            <header>
                <h1 class="text-3xl font-semibold text-green-600">Kalender</h1>
            </header>

            <div class="mt-6">
                <table class="min-w-full bg-white table-auto">
                    <thead>
                        <tr class="bg-green-200">
                            <th class="px-6 py-3 text-left text-green-700">Tanggal</th>
                            <th class="px-6 py-3 text-left text-green-700">Jenis Sidang</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% kalender.forEach(function(item) { %>
                        <tr class="border-b">
                            <td class="px-6 py-4 text-gray-700">
                                <%= new Date(item.tanggal).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                            </td>
                            <td class="px-6 py-4 text-gray-700">
                                <% if (item.jenis_sidang === 'SEMHAS') { %>
                                    Seminar Hasil
                                <% } else if (item.jenis_sidang === 'TA') { %>
                                    Sidang TA
                                <% } else { %>
                                    <%= item.jenis_sidang %>
                                <% } %>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>

  </body>
</html>