<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Daftar Topik TA Tersedia</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <%- include('../partial/header.ejs') %>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Sidebar -->
        <%- include('../sidebar/sidebarmahasiswa.ejs') %>

          <!-- Main Content -->
          <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold text-green-600 mb-6">Daftar Topik TA Tersedia</h2>
            <div class="overflow-x-auto bg-white rounded-lg shadow-lg">
              <table class="min-w-full table-auto w-full border border-gray-400 border-collapse text-sm">
                <thead>
                  <tr class="bg-green-600 text-white">
                    <th class="px-4 py-2 text-center border border-gray-400">No</th>
                    <th class="px-4 py-2 text-center border border-gray-400">Topik</th>
                    <th class="px-4 py-2 text-center border border-gray-400">Dosen Pembimbing</th>
                  </tr>
                </thead>
                <tbody>
                  <% topikList.forEach((topik, index) => { %>
                  <tr class="bg-white hover:bg-gray-100">
                    <td class="px-4 py-2 text-center border border-gray-400"><%= index + 1 %></td>
                    <td class="px-4 py-2 border border-gray-400"><%= topik.topik %></td>
                    <td class="px-4 py-2 border border-gray-400"><%= topik.dosen %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
       </div>
    </div>
    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>
  </body>
</html>