<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <title>Upload Draft Seminar Hasil</title>
  <link rel="stylesheet" href="/stylesheets/output.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100">
  <!-- Header -->
  <%- include('../partial/header.ejs') %>

  <!-- Main Content -->
  <div class="container mx-auto p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Sidebar -->
      <%- include('../sidebar/sidebarmahasiswa.ejs') %>

      <!-- Main Content Area -->
      <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-5xl font-semibold text-green-600 mb-6">Upload Draft Seminar Hasil</h2>

        <div class="max-w-4xl mx-auto px-4 py-10">
          <!-- Form Upload File -->
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <label for="draftSeminarHasil" class="block text-lg font-medium text-green-600 mb-4">Pilih File Draft Seminar Hasil
              (PDF/DOC)</label>
            <!-- Box untuk upload -->
            <div class="border-2 border-green-500 p-6 rounded-lg text-left bg-green-100">
              <!-- Flex container untuk tombol dan status -->
              <div class="flex flex-row items-center">
                <!-- Tombol Choose File -->
                <label for="draftSeminarHasil"
                  class="bg-green-500 text-white px-6 py-3 rounded-lg cursor-pointer hover:bg-green-700 transition">
                  Choose File Draft
                </label>
                <input type="file" id="draftSeminarHasil" name="draftSeminarHasil" accept=".pdf,.doc,.docx" class="hidden"
                  required>

                <!-- Status nama file -->
                <p id="fileName" class="mt-4 text-sm text-gray-600 ml-4 text-center mb-4">No file chosen</p>
              </div>
            </div>

            <!-- Tombol Upload -->
            <div class="flex justify-center mt-6">
              <button type="submit"
                class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition w-full">
                Upload Draft Seminar Hasil
              </button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-green-600 text-white text-center p-4 mt-6">
    <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
  </footer>

  <script>
    // Display the selected file name
    const inputFile = document.getElementById('draftSeminarHasil');
    const fileNameDisplay = document.getElementById('fileName');

    // Enable button when a file is selected
    inputFile.addEventListener('change', () => {
      if (inputFile.files.length > 0) {
        fileNameDisplay.textContent = inputFile.files[0].name;
      } else {
        fileNameDisplay.textContent = "No file chosen";
      }
    });
  </script>
</body>

</html>
