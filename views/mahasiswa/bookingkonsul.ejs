<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <title>Booking Sesi Konsultasi Dosen</title>
  <link rel="stylesheet" href="/stylesheets/output.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100">
  <!-- Header -->
  <header class="bg-green-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold">SIMTASI</h1>
      </div>
      <div>
        <button class="text-white bg-green-700 px-4 py-2 rounded-full hover:bg-green-800">
          <span
            style="background-image: url('../images/user_icon.png'); background-size: cover; background-position: center; width: 24px; height: 24px; display: inline-block;"></span>
        </button>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container mx-auto p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Sidebar -->
      <%- include('../sidebar/sidebarmahasiswa.ejs') %>

      <!-- Main Content Area -->
      <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-3xl font-semibold text-green-600 text-center mb-6">Booking Sesi Konsultasi Dosen</h2>

        <form action="/bookingkonsul" method="POST" class="bg-white p-6 rounded-lg shadow-lg">
          <div class="space-y-4">
            <!-- Pilih Dosen Pembimbing -->
            <div class="flex flex-col">
              <label for="dosen" class="text-gray-700">Pilih Dosen Pembimbing</label>
              <select name="dosen" id="dosen" class="mt-1 p-2 border rounded-md bg-green-50" required>
                <option value="">--Pilih Dosen--</option>
                <% dosen.forEach(function(dosen) { %>
                  <option value="<%= dosen.email_user %>"><%= dosen.nama %></option>
                <% }) %>
              </select>
            </div>

            <!-- Pilih Tanggal -->
            <div class="flex flex-col">
              <label for="tanggal" class="text-gray-700">Pilih Tanggal</label>
              <input type="date" name="tanggal" id="tanggal" class="mt-1 p-2 border rounded-md" required>
            </div>

            <!-- Pilih Waktu -->
            <div class="flex flex-col">
              <label for="waktu" class="text-gray-700">Pilih Waktu</label>
              <select name="waktu" id="waktu" class="mt-1 p-2 border rounded-md bg-green-50" required>
                <option value="">--Pilih Waktu--</option>
                <option value="08:00">08:00</option>
                <option value="10:00">10:00</option>
                <option value="12:00">12:00</option>
                <option value="14:00">14:00</option>
                <option value="16:00">16:00</option>
              </select>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="mt-6 text-center">
            <button type="submit" class="bg-green-600 text-white p-2 rounded-md w-full">Booking Sesi Konsultasi</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-green-600 text-white text-center p-4 mt-6">
    <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
  </footer>

  <script>
    // Display the selected file name
    const inputFile = document.getElementById('revisiLaporanFile');
    const fileNameDisplay = document.getElementById('fileName');

    // Enable button when a file is selected
    inputFile.addEventListener('change', () => {
      if (inputFile.files.length > 0) {
        fileNameDisplay.textContent = inputFile.files[0].name;
      } else {
        fileNameDisplay.textContent = "No file chosen";
      }
    });
  </script>
</body>

</html>
