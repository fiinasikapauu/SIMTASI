<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Daftar Topik TA Tersedia</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <%- include('../partial/header.ejs') %>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Sidebar -->
        <%- include('../sidebar/sidebaradmin.ejs') %>
    
        <!-- Main Content -->
          <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg ">
              <h2 class="text-2xl font-semibold text-green-600 mb-6">Daftar Topik TA Tersedia</h2>
              
              <div class="overflow-x-auto bg-white rounded-lg shadow-lg">
                  <table class="border-separate border border-gray-400 dark:border-gray-500 min-w-full table-auto w-full text-lg border-collapse">
                      <thead>
                          <tr class="bg-green-600 text-white">
                              <th class="px-3 py-2 text-center border-r border border-gray-300 dark:border-gray-600">No</th>
                              <th class="px-3 py-2 text-center border-r border border-gray-300 dark:border-gray-600">Topik</th>
                              <th class="px-3 py-2 text-center border-r border border-gray-300 dark:border-gray-600">Dosen Pembimbing</th>
                              <th class="px-3 py-2 text-center">Aksi</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% topikList.forEach((topik, index) => { %>
                          <tr class="bg-gray-100 border-b border-gray-300">
                              <td class="px-3 py-2 text-center"><%= index + 1 %></td>
                              <td class="px-3 py-2"><%= topik.topik %></td>
                              <td class="px-3 py-2"><%= topik.dosen %></td>
                              <td class="px-3 py-2 text-center">
                                  <!-- Tombol hapus -->
                                  <button class="w-full bg-green-600 text-white px-2 py-3 rounded-md hover:bg-green-700 transition deleteBtn" data-id="<%= topik.id_topikta %>">
                                      <i class="fa fa-trash"></i> Hapus
                                  </button>
                              </td>
                          </tr>
                          <% }) %>
                      </tbody>
                  </table>
              </div>
          </div>
        </div>
      </div>
    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>
    <!-- Check if the success parameter is passed in the URL -->
    <script src="/javascripts/delete-topik.js"></script>
  </body>
</html>