<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Daftar Topik TA</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <%- include('../partial/header.ejs') %>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Sidebar -->
        <%- include('../sidebar/sidebaradmin.ejs') %>
            <!-- Main Content Area -->
            <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold text-green-600 mb-6">Monitoring Beban Dosen</h2>
                <div class="overflow-x-auto bg-white rounded-lg shadow-lg">
                    <table class="border-separate border border-gray-400 dark:border-gray-500 min-w-full table-auto w-full text-lg border-collapse">
                    <thead>
                        <tr class="bg-green-600 text-white">
                        <th class="px-3 py-2 text-center border-r border-gray-300">No</th>
                        <th class="px-3 py-2 text-center border-r border-gray-300">Nama Dosen</th>
                        <th class="px-3 py-2 text-center border-r border-gray-300">Jumlah Mahasiswa Bimbingan</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((entry, index) => { %>
                        <tr class="bg-gray-100 border-b border-gray-300">
                            <td class="px-3 py-2 text-center"><%= index + 1 %></td>
                            <td class="px-3 py-2"><%= entry.nama_dosen %></td>
                            <td class="px-3 py-2 text-center"><%= entry.jumlah_mahasiswa %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>
    <!-- Check if the success parameter is passed in the URL -->
    <script src="/javascripts/alert-daftartopik.js"></script>
  </body>
</html>
