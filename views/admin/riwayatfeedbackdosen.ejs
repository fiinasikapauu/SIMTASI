<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Riwayat Konsultasi</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/output.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-100">
  <!-- Header -->
    <%- include('../partial/header.ejs') %>

  <!-- Main Content -->
  <div class="container mx-auto p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Sidebar -->
      <%- include('../sidebar/sidebaradmin.ejs') %>

      <!-- Main Content Area -->
      <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-3xl font-semibold text-green-600 text-center mb-6">Riwayat Konsultasi</h2>

        <!-- Menampilkan alert jika status success -->
        <% if (typeof status !== 'undefined' && status === 'success') { %>
          <script>
            Swal.fire({
              icon: 'success',
              title: 'Riwayat Konsultasi Berhasil Dihapus!',
              confirmButtonText: 'OK'
            });
          </script>
        <% } %>

        <table class="min-w-full bg-white border border-gray-200">
          <thead>
            <tr class="bg-green-600 text-white">
              <th class="p-2">Tanggal</th>
              <th class="p-2">Nama</th>
              <th class="p-2">Topik Konsultasi</th>
              <th class="p-2">Hasil Diskusi</th>
              <th class="p-2">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% riwayat.forEach(item => { %>
              <tr class="border-t">
                <td class="p-2"><%= item.tanggal.toLocaleDateString() %></td>
                <td class="p-2"><%= item.user.nama %></td>
                <td class="p-2"><%= item.topik_konsultasi %></td>
                <td class="p-2"><%= item.feedback_text || 'Tidak ada feedback' %></td>
                <td class="p-2">
                  <form action="/riwayatfeedbackdosen/delete/<%= item.id_feedback %>" method="GET" class="inline-block">
                    <button type="submit" class="text-red-600 hover:text-red-800">Hapus</button>
                  </form>
                </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-green-600 text-white text-center p-4 mt-6">
    <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
  </footer>
</body>
</html>
