<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monitoring Beban Dosen</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0/dist/tailwind.min.css" rel="stylesheet">
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-100">

  <!-- Header -->
  <header class="bg-green-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold">SIMTASI</h1>
      </div>
      <div>
        <button class="text-white bg-green-600 px-4 py-2 rounded-full hover:bg-green-600">
          <span style="background-image: url('../images/user_icon.png'); background-size: cover; background-position: center; width: 24px; height: 24px; display: inline-block;"></span>
        </button>
      </div>
    </div>
  </header>

  <!-- Layout with Sidebar and Main Content -->
  <div class="flex">

    <!-- Sidebar -->
    <%- include('../sidebar/sidebaradmin.ejs') %> <!-- Sidebar content -->

    <!-- Main Content -->
    <div class="flex-1 p-6">
      
      <!-- Monitoring Beban Dosen -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Monitoring Beban Dosen</h2>

        <!-- Displaying SweetAlert after status -->
        <% if (status) { %>
            <% status.forEach(item => { %>
                <script>
                    Swal.fire({
                        title: '<%= item.email_user %>',
                        text: '<%= item.message %>',
                        icon: item.status === 'success' ? 'success' : 'error',
                        confirmButtonText: 'OK'
                    });
                </script>
            <% }); %>
        <% } %>

        <!-- Table for monitoring load -->
        <form id="updateBebanForm" action="/update-bean-bimbingan" method="POST">
            <table class="w-full table-auto border-collapse mb-6">
                <thead>
                    <tr class="bg-green-600 text-white">
                        <th class="px-4 py-2">No</th>
                        <th class="px-4 py-2">Nama Dosen</th>
                        <th class="px-4 py-2">Beban Bimbingan</th>
                    </tr>
                </thead>
                <tbody>
                    <% dosenList.forEach((dosen, index) => { %>
                        <tr class="border-b">
                            <td class="px-4 py-2"><%= index + 1 %></td>
                            <td class="px-4 py-2"><%= dosen.nama %></td>
                            <td class="px-4 py-2">
                                <input type="text" name="beban_<%= dosen.email_user %>" value="<%= dosen.beban_bimbingan %>" class="p-2 border rounded w-full">
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <!-- Submit Button -->
            <button type="submit" class="mt-4 p-2 bg-green-600 text-white rounded-lg w-full">Submit</button>
        </form>
      </div>

    </div> <!-- End of Main Content -->

  </div> <!-- End of Layout -->

  <!-- Footer -->
  <footer class="bg-green-600 text-white text-center p-4 mt-6">
    <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
  </footer>

  <script>
    // SweetAlert2 Confirmation Before Submit
    const form = document.getElementById('updateBebanForm');
    
    form.addEventListener('submit', function(event) {
        event.preventDefault();  // Prevent default form submission

        // Show SweetAlert2 confirmation before form submission
        Swal.fire({
            title: 'Beban Bimbingan Dosen',
            text: 'Apakah Anda yakin ingin mengupdate data?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Ya, Perbarui',
            cancelButtonText: 'Tidak'
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the form if confirmed
                form.submit();
            }
        });
    });
  </script>
</body>
</html>
