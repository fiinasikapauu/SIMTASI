<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Daftar Topik TA</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-green-600 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold">SIMTASI</h1>
        </div>
        <div>
          <button
            class="text-white bg-green-700 px-4 py-2 rounded-full hover:bg-green-800"
          >
            <span
              style="
                background-image: url('../images/user_icon.png');
                background-size: cover;
                background-position: center;
                width: 24px;
                height: 24px;
                display: inline-block;
              "
            ></span>
          </button>
        </div>
      </div>
    </header>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Sidebar -->
        <%- include('../sidebar/sidebaradmin.ejs') %>

        <!-- Main Content Area -->
        <div class="col-span-2 bg-white p-6 rounded-lg shadow-lg">
          <h2 class="text-5xl font-semibold text-green-600 mb-6">Daftar Topik TA</h2>

          <!-- Form for inputting Topik TA -->
          <form id="topikForm" action="/daftartopikta" method="POST">
            <div class="mb-4">
              <label for="topik" class="block text-gray-700">Nama Topik TA</label>
              <input
                type="text"
                name="topik"
                id="topik"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
                required
              />
            </div>

            <div class="mb-4">
              <label for="dosen" class="block text-gray-700">Nama Dosen Pembimbing</label>
              <input
                type="text"
                name="dosen"
                id="dosen"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
                required
              />
            </div>

            <button
              type="submit"
              class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700"
            >
                Submit
              </button>
            </form>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>
    <!-- Check if the success parameter is passed in the URL -->
    <script src="/javascripts/alert-daftartopik.js"></script>
  </body>
</html>
