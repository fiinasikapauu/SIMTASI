<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Daftar Topik TA Tersedia</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-green-600 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold">SIMTASI</h1>
        </div>
        <div>
          <button
            class="text-white bg-green-700 px-4 py-2 rounded-full hover:bg-green-800"
          >
            <span
              style="
                background-image: url('../images/user_icon.png');
                background-size: cover;
                background-position: center;
                width: 24px;
                height: 24px;
                display: inline-block;
              "
            ></span>
          </button>
        </div>
      </div>
    </header>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Sidebar -->
        <%- include('../sidebar/sidebaradmin.ejs') %>
             <!-- Main Content Area -->
             <div class="container mx-auto p-8">
             <h2 class="text-4xl font-bold text-green-600 mb-8">Galeri Judul TA yang Selesai</h2>
                
                <form method="get" action="/galerijudulTA" class="mb-4">
                  <div class="flex space-x-4">
                    <input type="text" name="tahun" placeholder="Tahun" class="px-4 py-2 border rounded" />
                    <input type="text" name="dosen" placeholder="Dosen Pembimbing" class="px-4 py-2 border rounded" />
                    <input type="text" name="bidang" placeholder="Bidang Keilmuan" class="px-4 py-2 border rounded" />
                    <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded">Filter</button>
                  </div>
                </form>

                <table class="table-auto w-full border-collapse">
                  <thead>
                    <tr class="bg-green-600 text-white">
                      <th class="px-6 py-2 text-center">No</th>
                      <th class="px-6 py-2 text-center">Nama</th>
                      <th class="px-6 py-2 text-center">Judul TA</th>
                      <th class="px-6 py-2 text-center">Dosen Pembimbing</th>
                      <th class="px-6 py-2 text-center">Tahun Selesai</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% mahasiswaList.forEach((item, index) => { %>
                      <tr class="border-b">
                        <td class="px-6 py-2 text-center"><%= index + 1 %></td>
                        <td class="px-6 py-2"><%= item.nama %></td>
                        <td class="px-6 py-2"><%= item.judul_ta %></td>
                        <td class="px-6 py-2"><%= item.dosen_pembimbing %></td>
                        <td class="px-6 py-2 text-center"><%= item.tahun_selesai %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="bg-green-600 text-white text-center p-4 mt-6">
      <p>&copy; 2025 Sistem Informasi - Fakultas Teknologi Informasi</p>
    </footer>
  </body>
</html>